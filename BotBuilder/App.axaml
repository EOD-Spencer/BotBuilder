<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:BotBuilder"
             x:Class="BotBuilder.App"
             RequestedThemeVariant="Default">
    <!-- "Default" ThemeVariant follows the system theme variant. "Dark" or "Light" are other available options. -->

    <!-- Data Templates -->
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <!-- Styles -->
    <Application.Styles>
        <FluentTheme />
    </Application.Styles>

</Application>